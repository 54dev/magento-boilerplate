// Get resources
$category        = $this->getRecursionCategory();
$childCategories = $this->getChildrenCategories($category);
$level           = $this->getLevel();
?>
<?php if ($category and $level): ?>
	<li class="level-<?=$level?>-item <?=(count($childCategories) > 0) ? 'dropdown-submenu' : null?>">
		<a href="<?=$this->getCategoryUrl($category)?>" class="level-<?=$level?>-link <?=$this->isCategoryActive($category) ? 'active' : null?>">
			<?=$category->getName()?>
		</a>

		<?php if (count($childCategories) > 0): ?>
			<ul class="dropdown-menu level-<?=++$level?>">
				<?php foreach ($childCategories as $childCategory): ?>
					<?=$this->getLayout()->createBlock('catalog/navigation')->setTemplate('catalog/navigation/top/recursive.phtml')->setLevel($level)->setRecursionCategory($childCategory)->toHtml()?>
				<?php endforeach ?>
			</ul>
		<?php endif ?>
	</li>
<?php endif ?>